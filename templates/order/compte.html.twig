{% extends 'base.html.twig' %}

{% block body %}

<section class="compte">
    <h1>Mon compte</h1>
    <div class="compte-order">
        <h2>Mes commandes</h2>
        <table>
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Date</th>
                    <th>Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders  %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.date }}</td>
                        <td>{{ order.price }}€</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="compte-api">
        <h2>Mon accès API</h2>
        {% if app.user.apiAccess %}
            <a href="{{ path('app_order_activate') }}">Désactiver mon accès API</a>
        {% else %}
            <a href="{{ path('app_order_activate') }}">Activer mon accès API</a>
        {% endif %}
    </div>
    <div class="compte-delete">
        <a href="#">Supprimer mon compte</a>
    </div>
</section>

{% endblock %}