{% extends 'base.html.twig' %}

{% block body %}

<section class="panier">
    <h1>Panier</h1>
        <div class="panier-vider">
            <a href="{{ path('app_order_delete') }}">x Vider le panier</a>
        </div>
    {% for product in products  %}
        <div class="panier-product">
            <img src="{{ asset('images/Product/Deodorant.png') }}" />
            <div class="panier-product-text">
                <h2>{{ product.name }}</h2>
                <p>Quantié: {{ orderProducts[ loop.index - 1].quantity }}</p>
                <p id="panier-product-text-price">{{ product.price }}€</p>
            </div>
        </div>
    {% endfor %}
    <div class="panier-price">
        <p id="totalPrice">Total panier : <span>{{ price }}€</span></p>
        <p id="frais-livraison">Frais de livraison : offert</p>
    </div>

    <a href="{{ path('app_main') }}#header-product-link">Poursuivre les achats</a>
    <a href="{{ path('app_order_validate') }}">Valider la commande</a>

</section>
{% endblock %}
